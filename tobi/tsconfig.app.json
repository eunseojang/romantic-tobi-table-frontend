{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tsbuildinfo",
    "target": "ES2020", // Typically ES2020 or ESNext for modern browsers
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"], // Required for browser APIs and modern JS
    "module": "ESNext",
    "skipLibCheck": true,

    /* Module Resolution & Path Aliases */
    "moduleResolution": "Bundler", // Recommended for Vite
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true, // Important for faster builds and certain bundlers
    "noEmit": true, // Vite handles compilation, TS just checks types
    "jsx": "react-jsx",

    /* Linting & Strictness */
    "strict": true, // Highly recommended for type safety
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path Aliases Configuration */
    "baseUrl": ".", // Crucial: tells TS to resolve non-relative paths from project root
    "paths": {
      "@/*": ["./src/*"] // Maps @/ to the src folder
    }
  },
  // "include" and "exclude" are also important outside compilerOptions
  "include": ["src"], // Ensure your source files are included
  "exclude": ["node_modules", "dist"]
}
